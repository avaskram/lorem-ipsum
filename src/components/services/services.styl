+theme(services)
  display: flex
  flex-direction row
  align-items flex-start
  justify-content: center;
  text-align center
  margin-x(-15px)
  margin-bottom 80px
  margin-top 80px

  &__item
    padding-x(15px)
    position: relative
    flex 1

    +before()
      bg-dot-svg(6px, #C4C4C4)
      position: absolute
      left: 0
      right: 0
      height: 6px
      width: 100%
      top: 47px

    +first()
      &:before
        left: 50%


    +last()
      &:before
        right: 50%



  &__icon
    circle-fill(100px,$theme-color)
    flex-col-md-center()
    margin-x(auto)
    border: 5px solid #286690
    font-size: 55px
    color: #fff
    margin-bottom: 20px
    position: relative

  +media(lg)
    flex-wrap: wrap;
    &__item
      hard-width((100%/3))
      margin-bottom 40px

    &__text
      max-width 160px
      margin-x(auto)


  +media(md)
    container-indent()
    flex-wrap: nowrap;
    padding-x($container-padding)
    scroll-wrap-x()
    justify-content: flex-start;

    &__item
      width 100%
      max-width: none;
      min-width: 200px
