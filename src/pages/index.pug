                  option(value="Et harum quidem") Et harum quidem
                  option(value="Temporibus autem") Temporibus autem
                  option(value="Itaque earum rerum") Itaque earum rerum
              +e.field
                +b.input
                  input(type="email" placeholder="Ваш e-mail" name="email" id="email" data-validation="email required" data-validation-error-msg="Wrong e-mail format")
              +e.field.--lg-mobile
                +b.input
                  input(type="text" placeholder="Вашe имя" name="name" id="name" data-validation="required" data-validation-error-msg="The field must not be empty")
              +e.field.--lg
                +b.range
                  +e.heading
                    +e.title Sed ut perspiciatis, unde omnis iste natus
                    +e.value
                      +e.SPAN.percent 0
                      |  %
                  +e.slider.js-range-slider(data-min="0" data-max="100" data-step="1" data-target=themeEl+"-range__percent" data-grid="false" data-skin="round" data-hide-from-to="true" data-hide-min-max="true")
                  
              +e.field
                +btn('--light --block --upload')
                  input(type="file" name="attachment")
                  +icon('ic-file','--left')
                  | Прикрепить файл
                +e.file#fileName
                  
              +e.field.--submit
                +btn-button('--theme --block')(type="submit")
                  | Отправить
          +e.response.--success
            +e.message
              +e.title Success
              +e.text
                p Lorem ipsum dolor sit amet, consectetur adipisicing elit
          +e.response.--error
            +e.message
              +e.title  Error
              +e.text
                p Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
                p
                  +e.SPAN.reset Try
