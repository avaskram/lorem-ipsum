  +b.section.--dark.--center
    +bg-set(imagesDir+'section-bg','png')
    +e.container
      +e.title Оформление 
        +e.SPAN.highlight Заказа
      +e.text
        p Перед заполнением формы ознакомьтесь с нашей схемой работы!
      +b.services
        +e.item
          +e.icon
            +icon('ic-loupe')
          +e.text Lorem ipsum dolor sit amet
        +e.item
          +e.icon
            +icon('ic-percent')
          +e.text Сonsecteturadipiscing elit
        +e.item
          +e.icon
            +icon('ic-document')
          +e.text Sed do eiusmod tempor
        +e.item
          +e.icon
            +icon('ic-mail')
          +e.text Sed do eiusmod Esse cillum dolore eu fugiat
        +e.item
          +e.icon
            +icon('ic-banknote')
          +e.text Excepteur sint occaecat cupidatat non proident
      +b.form
        form()
          +e.container
            +e.content
              +e.field
                +b.SELECT.select(data-placeholder="Выберите тип системы" name="system-type")
                  option(value="")
                  option(value="Sed ut perspiciatis") Sed ut perspiciatis
                  option(value="Nemo enim ipsam") Nemo enim ipsam
                  option(value="Et harum quidem") Et harum quidem
                  option(value="Temporibus autem") Temporibus autem
                  option(value="Itaque earum rerum") Itaque earum rerum
